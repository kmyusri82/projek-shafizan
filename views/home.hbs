<div class="row">
    <div class="col-6"><h1>Smart Gate User</h1></div> 
    <div class="col-6 d-flex justify-content-end">
        <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ add user</a>
    </div>
</div>




<table class="table table-bordered"  >
  <thead>
      
    <tr>
      <th scope="col"><i class="bi bi-circle-fill"></i>  Number Plate</th>
      <th scope="col"><i class="bi bi-person-circle"></i>  Owner Name</th>
      <th scope="col"><i class="bi bi-car-front-fill"></i>  Car Model</th>
      <th scope="col"><i class="bi bi-brush-fill"></i>  Car Color</th>
      <th scope="col" class="text-end"><i class="bi bi-car-front-fill"></i>  Action</th>
      
    </tr>
  </thead>
  <tbody>


    {{#each rows}}
    <tr>
      <th scope="row">{{this.numberplate}}</th>
      <td>{{this.ownername}}</td>
      <td>{{this.carmodel}}</td>
      <td>{{this.carcolor}}</td>
      <td class="text-end">
            <a href="/viewuser/{{this.numberplate}}" type="button" class="btn btn-dark btn-small"><i class="bi bi-eye"></i> View</a>
            <a href="/edituser/{{this.numberplate}}" type="button" class="btn btn-dark btn-small"><i class="bi bi-pencil"></i> Edit</a>
            <a href="/{{this.numberplate}}" type="button" class="btn btn-danger btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each }}

  </tbody>

</table>